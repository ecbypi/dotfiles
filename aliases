## Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias ll='ls -al'
alias lh='ls -Alh'

## Git
# Nice, succinct git logs
# http://www.theint.ro/blogs/outro/4649682-git-for-busy-people-see-what-youre-doing
alias g="git"
alias gl="git log --color --graph --pretty=\"format:%C(yellow)%h%Cgreen%d%Creset %s %C(white) %an, %ar%Creset\""

## Editing
alias vim="nvim"

## Ruby
alias b="bundle"
alias be="bundle exec"
alias bu="bundle update"
alias gi="gem install"
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias s="bundle exec rspec"
